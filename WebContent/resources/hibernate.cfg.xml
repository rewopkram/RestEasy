<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
<!--     Note: This is a generated configuration file, 
               if you need to make changes to this file please
               remember that you will loose them the next time
               this file is regenerated. -->

        <property name="hibernate.connection.password">mark</property>
        <property name="hibernate.connection.username">mark</property>
        <property name="hibernate.cache.use_query_cache">true</property>
        <property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">300</property>
        <property name="hibernate.c3p0.timeout">1800</property>
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521/orcl</property>
        
        <property name="hibernate.c3p0.max_size">5</property>
        <property name="hibernate.cglib.use_reflection_optimizer">true</property>
        
        <property name="hibernate.default_schema">mark</property> <!-- does not work for sql named queries -->
        
        <mapping resource="com/msp/model/Person.hbm.xml" />
        <mapping resource="com/msp/model/Comment.hbm.xml" />
       
    </session-factory>
</hibernate-configuration>
